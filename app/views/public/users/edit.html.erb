<!--ユーザープロフィール編集画面-->
<div class="container mt-4 mb-4">
  <div class="row">
    <div class="col-md-12">
      <h2>プロフィール編集</h2>
    </div>
  </div>
  <%= form_with model: @user do |f| %>
  <div class="row my-4">
    <div class="col-md-6">
      <label for="inputImage">プロフィール画像</label>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.file_field :profile_image, accept: "image/*", class: "form-control-file user_image" %>
      </div>
    </div>
  </div>
  <div class="row my-4">
    <div class="col-md-6">
      <label for="inputName">ニックネーム</label>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.text_field :nick_name, autofocus: true, id:"inputName", class: "form-control name" %>
      </div>
    </div>
  </div>
  <div class="row my-4">
    <div class="col-md-6">
      <label for="inputIntroduction">自己紹介</label>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", class: "form-control introduction" %>
      </div>
    </div>
  </div>
  <div class="form-group col-sm-12 text-right">
    <%= f.submit "プロフィールを更新", class: "btn btn-primary" %>
  </div>
  <% end %>
</div>