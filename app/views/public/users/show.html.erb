<!--ユーザーマイページ-->
<div class="container mt-4 mb-3">
  <div class="row">
    <div class="col-12">
      <h2>マイページ</h2>
      <%= render 'public/shared/userform', user: @user %>
        <div class="col-12">
          <h4><%= @user.nick_name %>の投稿   <%= @user.posts.count %> 件</h4>
        </div>
      </div>
      <div class="row text-center">
        <div class="col-9">
          <%= render 'public/shared/post', posts: @posts %>
        </div>
      </div>
    </div>
  </div>
</div>