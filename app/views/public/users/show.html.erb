<!--ユーザーマイページ-->
<div class="container mt-4 mb-3">
  <div class="row">
    <div class="col-12">
      <h2>マイページ</h2>
      <%= render 'public/shared/userform', user: @user %>
        <div class="col-12">
          <h4><%= @user.nick_name %>の投稿   <%= @user.posts.count %> 件</h4>
        </div>
      </div>
      <div class="row text-center">
        <div class="col-9">
          <table class="table">
            <thead>
              <tr>
                <th>投稿タイトル</th>
                <th>いいね</th>
                <th>コメント</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @posts.each do |post| %>
              <tr>
                <td><%= link_to post.title, post_path(post.id) %></td>
                <td><%= post.favorites.count %></td>
                <td><%= link_to "#{post.comments.count}", post_path(post.id) %></td>
                <th></th>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>