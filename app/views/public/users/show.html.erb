<!--ユーザーマイページ-->
<div class="container mt-4 mb-3">
  <div class="row">
    <div class="col-md-12">
      <h2>マイページ</h2>
      <div class="row">
        <div class="col-md-4">
          <%= image_tag @user.get_profile_image(200, 200), class:"userimage" %>
        </div>
        <div class="col-md-4">
          <table class="table">
            <tbody>
              <tr>
                <td>ニックネーム</td>
                <td><%= @user.nick_name %></td>
              </tr>
              <tr>
                <td>自己紹介</td>
                <td><%= @user.introduction %></td>
              </tr>
              <tr>
                <td>お気に入り</td>
                <td>件</td>
              </tr>
            </tbody>
          </table>
        </div>
        <!--ログイン中のユーザーがゲストユーザーではなく、かつ表示中のユーザーと一致している場合、編集・退会ボタンを表示-->
        <% if !@user.guest_user? && @user == current_user %>
          <div class="col-md-4 d-flex align-items-end">
            <%= link_to "プロフィールを編集", edit_user_path(@user), class: "btn btn-primary" %>
            <%= link_to "退会", confirm_users_path, class: "btn btn-danger ml-3" %>
          </div>
        <% end %>
      </div>
      <div class="row">
        <div class="col-md-12">
          <h4><%= @user.nick_name %>の投稿   <%= @user.posts.count %> 件</h4>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <table class="table">
            <thead>
              <tr>
                <th></th>
                <th>投稿タイトル</th>
                <th>いいね</th>
                <th>コメント</th>
              </tr>
            </thead>
            <tbody>
              <% @posts.each do |post| %>
              <tr>
                <td></td>
                <td><%= link_to post.title, post_path(post.id) %></td>
                <td>いいね数</td>
                <td>コメント数</td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
