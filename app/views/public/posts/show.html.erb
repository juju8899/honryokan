<div class="container mt-4 mb-3">
  <div class="row">
    <div class="col-md-12">
      <h2>投稿詳細ページ</h2>
      <div class="row">
        <div class="col-md-4">
          <!--本の画像を挿入予定<br>-->
          <!--本のタイトル<br>-->
          <!--著者名<br>-->
          <!--発売日-->
        </div>
        <div class="col-md-8">
          <p>投稿者 : <%= @post.user.nick_name %></p>
          <p>投稿タイトル<br></p>
          <%= @post.tags.name %>
          <% @post_tags.each do |tag| %>
            <%= link_to tag.name,search_tag_path(post_tag_id: tag.id) %>
          <% end %>
          <h4>
            <%= @post.title %>
            <% if @post.user.id == current_user.id %>
              <%= link_to "編集", edit_post_path(@post), class: "btn btn-primary ml-5" %>
            <% end %>
          </h4><br>
          <p>あらすじ</p><br>
          <!--item_caption-->
          <p>おすすめ理由</p><br>
          <p><%= @post.point %></p>
        </div>
      </div>
    </div>
  </div>
</div>