<!--楽天ブックス検索結果-->
<div class="container mt-4 mb-3">
  <div class="row">
    <div class="col-md-12">
      <h2>検索結果一覧</h2>
      <% @books.each do |book| %>
      <!--出力パラメータの表示-->
      <div class="row mt-4 text-center">
        <div class="col-md-3">
          <%= link_to (image_tag(book.large_image_url)), book.item_url %><br>
        </div>
        <div class="col-md-6">
          <%= book.title %><br>
          <%= book.author %><br>
          <%= book.item_caption %><br>
        </div>
        <!--おすすめボタンを押下すると選んだ書籍の情報が新規登録画面に送られる-->
        <div class="col-md-3 my-auto">
          <%= link_to "おすすめする", new_post_path(title: book.title, author: book.author, synopsis: book.item_caption, image: book.large_image_url, isbn: book.isbn), class: "btn btn-primary" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>