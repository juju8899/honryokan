<!--楽天ブックス検索結果-->
<div class="container mt-4 mb-3">
  <div class="row">
    <div class="col-md-12">
      <h2>検索結果一覧</h2>
      <% @books.each do |book| %>
      <div class="row my-auto">
        <div class="col-md-4">
          <%= link_to (image_tag(book.large_image_url)), book.item_url %><br>
        </div>
        <div class="col-md-4">
          <%= book.title %><br>
          <%= book.author %><br>
          <%= book.item_caption %><br>
        </div>
        <div class="col-md-4 my-auto">
          <%= link_to "おすすめする", new_post_path(title: book.title, author: book.author, synopsis: book.item_caption, image: book.medium_image_url), class: "btn btn-primary" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
