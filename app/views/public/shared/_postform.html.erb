
<%= form_with model: post do |f| %>
<div class="row my-3">
  <div class="col-lg-4 text-center">
    <p>投稿タイトル</p>
  </div>
  <div class="col-lg-6">
    <div class="form-group">
      <%= f.text_field :title, class: 'form-control post_title' %>
    </div>
  </div>
</div>
<div class="row my-3 text-center">
  <div class="col-lg-4 my-auto">
    <p>おすすめ理由</p>
  </div>
  <div class="col-lg-6">
    <div class="form-group">
      <%= f.text_area :point, rows: '5', class: 'form-control point' %>
    </div>
  </div>
</div>
<div class="row my-3 text-center">
  <div class="col-lg-4 my-auto">
    <p>タグ付け</p>
  </div>
  <div class="col-lg-6">
    <div class="form-group">
      <label>タグ(,で区切ると複数タグ登録できます)</label>
      <%= f.text_field :tag_id, value: @tag_list, class: 'form-control tag_id' %>
    </div>
  </div>
</div>
<div class="row my-4">
  <div class="col-12 text-center">
    <div class="form-group">
      <%= f.text_field :isbn, value: params[:isbn] %>
      <%= f.submit "投稿", class: 'col-3 btn btn-primary' %>
    </div>
  </div>
</div>
<% end %>