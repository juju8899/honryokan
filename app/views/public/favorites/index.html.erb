<!--いいね一覧画面-->
<div class="container mt-4 mb-3">
  <div class="row">
    <div class="col-12">
      <h4>プロフィール</h4>
    </div>
  </div>
    <%= render 'public/shared/userform', user: @user %>
  <div class="col-12">
    <h4>いいねした投稿一覧</h4>
  </div>
  <div class="row">
    <div class="col-12">
      <% if @posts.present? %>
        <%= render 'public/shared/post', posts: @posts %>
      <% else %>
        <p class="text-center">いいねした投稿はありません</p>
      <% end %>
    </div>
  </div>
</div>