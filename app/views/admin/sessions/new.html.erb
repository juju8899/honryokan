<!--管理者ログイン画面-->
<div class="container mt-4 mb-4">
  <div class="row">
    <div class="col-md-8">
      <h2>管理者ログイン</h2>

      <%= form_with model: @admin, url: new_admin_session_path do |f| %>
        <div class="form-group my-4">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="form-group">
          <%= f.label :パスワード %>
          <%= f.password_field :password, class: "form-control", autocomplete: "current-password" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group pl-3">
            <%= f.check_box :remember_me, class: "form-check-input" %>
            <%= f.label :remember_me, class: "form-check-label" %>
          </div>
        <% end %>

        <div class="form-group">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      <% end %>
      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>